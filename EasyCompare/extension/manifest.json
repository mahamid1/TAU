{
  "manifest_version": 3,
  "name": "EasyCompare",
  "version": "1.0",
  "description": "Shopping assistant extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["searchResults.html", "index.js", "index.css", "App.css", "assets/easyCompare.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
